{
  "name": "nodejs-backend-template",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "prod": "cross-env NODE_PATH=./ NDOE_ENV=prod node src/app.js",
    "dev": "cross-env NODE_PATH=./ NDOE_ENV=dev nodemon src/app.js",
    "ci": "npm run lint && npm run test-setup && npm run test && npm run test-cleanup",
    "test": "cross-env NODE_PATH=./ NODE_ENV=test jest --coverage --testPathIgnorePatterns=test/debug --forceExit --detectOpenHandles --verbose",
    "test-sys": "cross-env NODE_PATH=./ NODE_ENV=test jest --testPathPattern=test/sys --forceExit --detectOpenHandles --verbose",
    "test-int": "cross-env NODE_PATH=./ NODE_ENV=test jest --testPathPattern=test/int --forceExit --detectOpenHandles --verbose",
    "test-unit": "cross-env NODE_PATH=./ NODE_ENV=test jest --testPathPattern=test/unit --forceExit --detectOpenHandles --verbose",
    "test-debug": "cross-env NODE_PATH=./ NODE_ENV=test jest --testPathPattern=test/debug.test.js --forceExit --detectOpenHandles --verbose",
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "test-setup": "docker-compose up -d",
    "test-cleanup": "docker-compose down"
  },
  "keywords": [],
  "author": "hadarsnorlax",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.5",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "helmet": "^6.1.5",
    "joi": "^17.9.1",
    "mongodb": "^5.2.0",
    "nconf": "^0.12.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "eslint": "^8.38.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "nock": "^13.3.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "wait-for-expect": "^3.0.2"
  }
}
